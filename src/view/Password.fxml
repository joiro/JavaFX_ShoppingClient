<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="250.0" prefWidth="450.0" style="-fx-background-color: #E0E0E0;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tableView.PasswordController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="350.0">
         <children>
            <Label layoutX="14.0" layoutY="14.0" text="Change Password">
               <font>
                  <Font name="Avenir Roman" size="27.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="20.0" />
         </padding>
      </HBox>
      <VBox layoutX="20.0" layoutY="50.0" spacing="10.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="50.0">
         <children>
            <HBox alignment="CENTER_RIGHT" layoutY="100.0" spacing="20.0">
               <children>
                  <Label layoutX="27.0" layoutY="61.0" text="Current password:" />
                  <TextField fx:id="currentPw" />
               </children>
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_RIGHT" layoutY="50.0" spacing="20.0">
               <children>
                  <Label layoutX="35.0" layoutY="102.0" text="New password:" />
                  <TextField fx:id="newPw" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
               <children>
                  <Label layoutX="35.0" layoutY="136.0" text="Re-enter new password:" />
                  <TextField fx:id="reenterNewPw" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox layoutX="157.0" layoutY="197.0" spacing="20.0" AnchorPane.bottomAnchor="25.0" AnchorPane.rightAnchor="50.0">
         <children>
            <Button fx:id="cancel" layoutX="157.0" layoutY="197.0" mnemonicParsing="false" onAction="#handleCancel" style="-fx-background-color: white; -fx-background-radius: 0;" text="Cancel" />
            <Button fx:id="saveChanges" layoutX="231.0" layoutY="197.0" mnemonicParsing="false" onAction="#handleSaveChanges" prefWidth="120.0" style="-fx-background-color: white; -fx-background-radius: 0;" text="Save Changes" />
         </children>
      </HBox>
   </children>
</AnchorPane>
